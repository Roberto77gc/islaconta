---
import "../styles/global.css";
const { title = "Guía para Autónomos en Canarias 2025 – IslaConta®" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" />

    <!-- AOS Animations CSS -->
    <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet" />

    <!-- SEO Optimizado -->
    <meta name="description" content="Accede a la guía 2025 para autónomos en Canarias. Fiscalidad, contabilidad y plantilla gratuita en Excel adaptada a la realidad insular." />
    <meta name="keywords" content="guía autónomos canarias 2025, plantilla fiscal canarias, excel contabilidad autónomos, fiscalidad insular, isla conta" />
    <meta name="author" content="IslaConta®" />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph -->
    <meta property="og:title" content="Guía para Autónomos en Canarias 2025 – IslaConta®" />
    <meta property="og:description" content="Plantilla gratuita y adaptada para autónomos y pymes canarias. Descarga inmediata." />
    <meta property="og:image" content="/islaconta-preview-2025.png" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://islaconta.es" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Guía para Autónomos en Canarias 2025 – IslaConta®" />
    <meta name="twitter:description" content="Descarga gratis la plantilla contable 2025 para autónomos y pymes canarias. Optimiza tu fiscalidad fácilmente." />
    <meta name="twitter:image" content="/islaconta-preview-2025.png" />

    <link rel="canonical" href="https://islaconta.es" />

    <title>{title}</title>

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-V702HR0M2M"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-V702HR0M2M');
    </script>
  </head>

  <body class="bg-gray-50 text-gray-900 font-sans leading-relaxed">
    <header class="bg-white shadow p-4 flex items-center justify-between">
      <h1 class="text-xl font-bold text-blue-700">
        <a href="/" aria-label="Volver al inicio IslaConta">IslaConta®</a>
      </h1>
      <a href="#cta" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" aria-label="Descargar plantilla IslaConta">
        Descargar ahora
      </a>
    </header>

    <main class="max-w-3xl mx-auto px-4 py-12">
      <!-- H1 SEO -->
      <h1 class="text-2xl font-bold mb-4">
        Guía para Autónomos en Canarias 2025: Plantilla y Fiscalidad Simplificada
      </h1>

      <!-- Imagen optimizada -->
      <img 
        src="/islaconta-preview-2025.png" 
        alt="Guía fiscal 2025 para autónomos en Canarias con plantilla gratuita IslaConta" 
        loading="lazy" 
        class="rounded shadow mb-6"
      />

      <!-- Enlace interno con frase clave -->
      <p class="mb-6">
        <a href="/" class="underline text-blue-600 hover:text-blue-800">
          Ver la guía 2025 para autónomos en Canarias
        </a>
      </p>

      <slot />
    </main>

    <footer class="text-center text-sm text-gray-500 py-8 space-y-2">
      <p>© 2025 IslaConta®. Todos los derechos reservados.</p>
      <div class="flex justify-center gap-4 text-blue-600">
        <a href="/politica-privacidad" class="hover:underline">Política de Privacidad</a>
        <a href="/aviso-legal" class="hover:underline">Aviso Legal</a>
        <a href="/politica-cookies" class="hover:underline">Cookies</a>
      </div>
    </footer>

    <!-- AOS JS -->
    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js" defer onload="AOS && AOS.init({ duration: 800, once: true })"></script>
    <script>
      window.addEventListener("load", () => {
        if (window.AOS) {
          AOS.init({ duration: 800, once: true });
        } else {
          console.warn("AOS no se ha cargado correctamente.");
        }
      });
    </script>
  </body>
</html>

